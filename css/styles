    }
}

@media (max-width: 768px) {
    /* Responsive navigation - to be implemented with JS */
    nav ul {
        display: none;
    }
    
    .mobile-menu-toggle {
        display: block;
    }
    
    .form-row {
        grid-template-columns: 1fr;
        gap: 0;
    }
    
    .cta-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .cta-buttons .btn {
        width: 100%;
        max-width: 300px;
    }
    
    .hero h1 {
        font-size: 1.8rem;
    }
    
    .hero p, .call-to-action p {
        font-size: 1rem;
    }
}

@media (max-width: 576px) {
